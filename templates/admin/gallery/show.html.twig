{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gallery.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ gallery.created ? gallery.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ gallery.online }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ gallery.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gallery_index') }}">back to list</a>

    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}