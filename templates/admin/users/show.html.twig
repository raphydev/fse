{% extends 'admin/admin.html.twig' %}
{% block title %} {{ 'Utilisateurs' }} {% endblock %}
{% block body %}
    <div class="col-6 col-md-offset-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Utilisateur détail'|upper }}</h4>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    {{ include('admin/users/_delete_form.html.twig') }}
                {% endif %}
            </header>
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'Nom Utilisateurs' }}</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Nom & Prénom' }}</th>
                        <td>{{ user.firstname|capitalize }} {{ user.lastname|capitalize }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-label btn-dark" href="{{ path('users_index') }}">
                    <label><i class="ti-arrow-left"></i></label>
                    {{ 'Retour à la liste'}}
                </a>
                <a class="btn btn-label btn-danger" href="{{ path('users_edit', {'id': user.id}) }}">
                    <label><i class="ti-pencil-alt"></i></label>
                    {{ 'Modifier' }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}