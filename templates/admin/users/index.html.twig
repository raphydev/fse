{% extends 'admin/admin.html.twig' %}

{% block title %} {{ 'Utilisateurs' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des utilisateurs'|upper }}</h4>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a class="btn btn-label btn-info" href="{{ path('users_new') }}">
                        <label><i class="ti-plus"></i></label>
                        {{ 'Ajouter un nouveau'}}
                    </a>
                {% endif %}
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Nom Utilisateur' }}</th>
                            <th>{{ 'Email' }}</th>
                            <th>{{ 'Nom & prénom' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Nom Utilisateur' }}</th>
                            <th>{{ 'Email' }}</th>
                            <th>{{ 'Nom & prénom' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username|capitalize }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.firstname|capitalize }} {{ user.lastname|capitalize }}</td>
                            <td>
                                <a href="{{ path('users_show', {'id': user.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">{{ 'Aucun utilisateurs trouvée' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}